<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.passman.desktop.ui.analytics.GraphViewController"
            stylesheets="@../styles/main.css">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <Button text="â† Back" onAction="#handleBackToDashboard" styleClass="back-button"/>
            <Label text="ðŸ“Š Security Analytics" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="action-button"/>
            <Button text="ðŸ“„ Export Report" onAction="#handleExportReport" styleClass="action-button"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Security Score Card -->
                <VBox spacing="10" styleClass="card" style="-fx-background-color:  white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Overall Security Score" styleClass="section-title"/>
                    <Separator/>
                    <HBox alignment="CENTER" spacing="50">
                        <VBox alignment="CENTER" spacing="5">
                            <Label text="Score" styleClass="section-label"/>
                            <Label fx:id="securityScoreLabel" text="0/100"/>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox alignment="CENTER" spacing="5">
                            <Label text="Total Passwords" styleClass="section-label"/>
                            <Label fx:id="totalPasswordsLabel" text="0" styleClass="value-label"/>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox alignment="CENTER" spacing="5">
                            <Label text="Avg Strength" styleClass="section-label"/>
                            <Label fx:id="averageStrengthLabel" text="0/100" styleClass="value-label"/>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox alignment="CENTER" spacing="5">
                            <Label text="Avg Age" styleClass="section-label"/>
                            <Label fx:id="averageAgeLabel" text="0 days" styleClass="value-label"/>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox alignment="CENTER" spacing="5">
                            <Label text="Reused" styleClass="section-label"/>
                            <Label fx:id="reusedCountLabel" text="0" styleClass="value-label"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Charts -->
                <GridPane hgap="20" vgap="20">
                    <!-- Strength Distribution -->
                    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0"
                          styleClass="card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <PieChart fx:id="strengthPieChart" prefHeight="300" prefWidth="400"/>
                    </VBox>

                    <!-- Age Distribution -->
                    <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0"
                          styleClass="card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                        <BarChart fx:id="ageBarChart" prefHeight="300" prefWidth="400">
                            <xAxis>
                                <CategoryAxis fx:id="ageXAxis" label="Age Category"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="ageYAxis" label="Number of Passwords"/>
                            </yAxis>
                        </BarChart>
                    </VBox>
                </GridPane>

                <!-- Recommendations -->
                <VBox spacing="10" styleClass="card" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Security Recommendations" styleClass="section-title"/>
                    <Separator/>
                    <ListView fx:id="recommendationsListView" prefHeight="200"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>