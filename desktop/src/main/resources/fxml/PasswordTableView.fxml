<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.passman.desktop.ui.dashboard.PasswordTableViewController"
      spacing="10">

    <TableView fx:id="credentialsTable">
        <VBox.vgrow>
            <Priority>ALWAYS</Priority>
        </VBox.vgrow>
        <styleClass>
            <String fx:value="credentials-table"/>
        </styleClass>

        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="200"/>
            <TableColumn fx:id="urlColumn" text="URL" prefWidth="250"/>
            <TableColumn fx:id="ageBadgeColumn" text="Age" prefWidth="100"/>
            <TableColumn fx:id="strengthColumn" text="Strength" prefWidth="100"/>
            <TableColumn fx:id="reuseColumn" text="Reuse" prefWidth="80"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120"/>
        </columns>

        <placeholder>
            <Label text="No credentials found. Click '+ Add' to create one."/>
        </placeholder>
    </TableView>

</VBox>
