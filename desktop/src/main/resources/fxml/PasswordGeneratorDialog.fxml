<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene. layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.passman.desktop.ui.generator.PasswordGeneratorController"
      spacing="15" stylesheets="@../styles/main.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Password Generator" styleClass="dialog-title"/>
    <Separator/>

    <!-- Generated Password -->
    <VBox spacing="5">
        <Label text="Generated Password: "/>
        <HBox spacing="10">
            <TextField fx:id="passwordField" editable="false" HBox.hgrow="ALWAYS"
                       styleClass="generated-password"/>
            <Button text="ðŸ“‹ Copy" onAction="#handleCopy" styleClass="action-button"/>
        </HBox>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <ProgressBar fx:id="strengthBar" prefWidth="200"/>
            <Label fx:id="strengthLabel" text="Strong"/>
        </HBox>
    </VBox>

    <Separator/>

    <!-- Length -->
    <VBox spacing="5">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Length:" prefWidth="100"/>
            <Slider fx:id="lengthSlider" min="8" max="64" value="16"
                    showTickLabels="true" showTickMarks="true" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lengthLabel" text="16" prefWidth="30"/>
        </HBox>
    </VBox>

    <!-- Options -->
    <VBox spacing="8">
        <Label text="Options: "/>
        <CheckBox fx:id="uppercaseCheck" text="Uppercase Letters (A-Z)" selected="true"/>
        <CheckBox fx:id="lowercaseCheck" text="Lowercase Letters (a-z)" selected="true"/>
        <CheckBox fx:id="numbersCheck" text="Numbers (0-9)" selected="true"/>
        <CheckBox fx: id="symbolsCheck" text="Symbols (! @#$%... )" selected="true"/>
        <CheckBox fx:id="ambiguousCheck" text="Exclude Ambiguous (0, O, 1, l, I)"/>
    </VBox>

    <Separator/>

    <!-- Presets -->
    <VBox spacing="5">
        <Label text="Quick Presets:"/>
        <HBox spacing="10">
            <Button text="Easy to Read" onAction="#handleEasyPreset" styleClass="preset-button"/>
            <Button text="Max Security" onAction="#handleMaxPreset" styleClass="preset-button"/>
            <Button text="PIN (Numbers Only)" onAction="#handlePinPreset" styleClass="preset-button"/>
        </HBox>
    </VBox>

    <Separator/>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose" styleClass="secondary-button"/>
        <Button text="Generate New" onAction="#handleGenerate" styleClass="action-button"/>
        <Button text="Use Password" onAction="#handleUsePassword" styleClass="primary-button"/>
    </HBox>

</VBox>