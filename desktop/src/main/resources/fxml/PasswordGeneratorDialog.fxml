<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.passman.desktop.ui.generator.PasswordGeneratorController"
      spacing="15" prefWidth="400" prefHeight="300">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Password Generator" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox spacing="5">
        <Label text="Length: 16" styleClass="field-label"/>
        <Slider fx:id="lengthSlider" min="8" max="64" value="16" showTickMarks="true"/>
    </VBox>

    <CheckBox fx:id="uppercaseCheck" text="Include Uppercase (A-Z)" selected="true"/>
    <CheckBox fx:id="lowercaseCheck" text="Include Lowercase (a-z)" selected="true"/>
    <CheckBox fx:id="numbersCheck" text="Include Numbers (0-9)" selected="true"/>
    <CheckBox fx:id="symbolsCheck" text="Include Symbols (!@#$%)" selected="true"/>

    <Separator/>

    <TextField fx:id="passwordField" editable="false" promptText="Generated password will appear here"/>

    <Button text="Generate" onAction="#handleGenerate" styleClass="primary-button" maxWidth="Infinity"/>

</VBox>