<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.passman.desktop.ui.login.LoginController"
            stylesheets="@/styles/main.css"
            styleClass="root">

    <center>
        <VBox alignment="CENTER" spacing="20" maxWidth="400">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <Label text="ðŸ” PassMan" styleClass="title">
                <font>
                    <Font name="System Bold" size="36"/>
                </font>
            </Label>

            <Label text="Secure Password Manager" styleClass="subtitle">
                <font>
                    <Font size="14"/>
                </font>
            </Label>

            <Separator/>

            <VBox spacing="10">
                <Label text="Master Password:"/>
                <PasswordField fx:id="masterPasswordField"
                               promptText="Enter your master password"/>
            </VBox>

            <Label fx:id="errorLabel"
                   styleClass="error-label"
                   wrapText="true"/>

            <ProgressIndicator fx:id="progressIndicator"
                               prefWidth="50"
                               prefHeight="50"
                               visible="false"
                               managed="false"/>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="loginButton"
                        text="Unlock Vault"
                        onAction="#handleLogin"
                        styleClass="primary-button"
                        prefWidth="150"/>
                <Button fx:id="createVaultButton"
                        text="Create Vault"
                        onAction="#handleCreateVault"
                        styleClass="secondary-button"
                        prefWidth="150"/>
            </HBox>

            <Hyperlink text="Forgot Password?"
                       onAction="#handleForgotPassword"
                       styleClass="link"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="5" styleClass="footer">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
            <Label text="PassMan v1.0.0 | Â© 2024 | End-to-End Encrypted"/>
        </HBox>
    </bottom>

</BorderPane>