<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry. Insets?>
<?import javafx.scene.control.*?>
<? import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com. passman.desktop.ui.credential.CredentialEditorController"
      spacing="15" stylesheets="@../styles/main.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Credential Details" styleClass="dialog-title"/>
    <Separator/>

    <!-- Title -->
    <VBox spacing="5">
        <Label text="Title *"/>
        <TextField fx:id="titleField" promptText="e.g., Gmail Account"/>
    </VBox>

    <!-- Username -->
    <VBox spacing="5">
        <Label text="Username"/>
        <TextField fx:id="usernameField" promptText="e.g., john@example.com"/>
    </VBox>

    <!-- Email -->
    <VBox spacing="5">
        <Label text="Email"/>
        <TextField fx: id="emailField" promptText="e.g., john@example. com"/>
    </VBox>

    <!-- URL -->
    <VBox spacing="5">
        <Label text="Website URL"/>
        <TextField fx:id="urlField" promptText="e.g., https://gmail.com"/>
    </VBox>

    <!-- Password -->
    <VBox spacing="5">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Password *" HBox.hgrow="ALWAYS"/>
            <Button text="Generate" onAction="#handleGeneratePassword" styleClass="small-button"/>
            <Button text="ðŸ‘" onAction="#handleTogglePasswordVisibility" styleClass="icon-button"/>
        </HBox>
        <PasswordField fx:id="passwordField"/>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <ProgressBar fx:id="strengthBar" prefWidth="200"/>
            <Label fx:id="strengthLabel" text="Weak"/>
        </HBox>
    </VBox>

    <!-- Tags -->
    <VBox spacing="5">
        <Label text="Tags"/>
        <TextField fx: id="tagsField" promptText="e. g., work, personal, important"/>
    </VBox>

    <!-- Notes -->
    <VBox spacing="5">
        <Label text="Notes"/>
        <TextArea fx:id="notesField" promptText="Additional notes..." prefRowCount="3"/>
    </VBox>

    <!-- Favorite -->
    <CheckBox fx:id="favoriteCheckbox" text="Mark as Favorite"/>

    <Separator/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button text="Save" onAction="#handleSave" styleClass="primary-button"/>
    </HBox>

</VBox>