<?xml version="1. 0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene. layout.*?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<VBox xmlns="http://javafx. com/javafx"
      xmlns:fx="http://javafx. com/fxml"
      fx:controller="com.passman.desktop.ui.credential.CredentialEditorController"
      spacing="15" prefWidth="500" prefHeight="600"
      style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="Add/Edit Password" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Separator/>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox spacing="15">
            <!-- Title -->
            <VBox spacing="5">
                <Label text="Title *" styleClass="field-label"/>
                <TextField fx:id="titleField" promptText="e.g., Gmail Account"/>
            </VBox>

            <!-- Username -->
            <VBox spacing="5">
                <Label text="Username" styleClass="field-label"/>
                <TextField fx:id="usernameField" promptText="username"/>
            </VBox>

            <!-- Email -->
            <VBox spacing="5">
                <Label text="Email" styleClass="field-label"/>
                <TextField fx:id="emailField" promptText="user@example.com"/>
            </VBox>

            <!-- URL -->
            <VBox spacing="5">
                <Label text="Website URL" styleClass="field-label"/>
                <TextField fx:id="urlField" promptText="https://example.com"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="5">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Password *" styleClass="field-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="ðŸŽ² Generate" onAction="#handleGeneratePassword" styleClass="secondary-button"/>
                </HBox>
                <PasswordField fx:id="passwordField" promptText="Enter password"/>
                <TextField fx:id="passwordVisibleField" promptText="Enter password" visible="false" managed="false"/>
                <CheckBox fx:id="showPasswordCheck" text="Show password"/>

                <!-- Password Strength -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <ProgressBar fx:id="strengthBar" prefWidth="150" progress="0"/>
                    <Label fx:id="strengthLabel" text=""/>
                </HBox>
            </VBox>

            <!-- Notes -->
            <VBox spacing="5">
                <Label text="Notes" styleClass="field-label"/>
                <TextArea fx:id="notesArea" promptText="Additional notes..." prefRowCount="3"/>
            </VBox>

            <!-- Favorite -->
            <CheckBox fx:id="favoriteCheck" text="â­ Mark as favorite"/>

        </VBox>
    </ScrollPane>

    <!-- Error Message -->
    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>

    <Separator/>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" styleClass="primary-button" defaultButton="true"/>
    </HBox>

</VBox>